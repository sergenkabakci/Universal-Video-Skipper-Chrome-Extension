{
	"manifest_version": 3,
	"name": "Universal Video Skipper",
	"description": "Skip forward/backward any HTML5 video using keyboard shortcuts and custom controls."

	"version": "1.1.0",

	"permissions": ["storage"],
	"host_permissions": ["<all_urls>"],

	"background": {
		"service_worker": "background.js"
	},

	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["content.js"],
		  "run_at": "document_idle"
		}
	],
	"action": {
	  "default_title": "Prime Video Skip",
	  "default_popup": "popup.html"
	},
	"options_page": "options.html"
}
